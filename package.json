{
  "name": "vfmtoolkit",
  "displayName": "vfmtoolkit",
  "description": "As the name suggests, a vfm debug toolkit",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/vfmtoolkit.git"
  },
  "engines": {
    "vscode": "^1.100.2"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vfmtoolkit",
          "title": "VFM Toolkit",
          "icon": "$(tools)"
        }
      ]
    },
    "views": {
      "vfmtoolkit": [
        {
          "id": "vfmtoolkit.fileExplorer",
          "name": "Device logs for VFM",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "vfmtoolkit.pullVfmLogs",
          "when": "view == vfmtoolkit.fileExplorer",
          "group": "navigation"
        },{
          "command": "vfmtoolkit.showInputBox",
          "when": "view == vfmtoolkit.fileExplorer",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "vfmtoolkit.pullVfmLogs",
        "title": "拉取VFM日志文件",
        "icon": "$(cloud-download)"
      },
      {
        "command": "vfmtoolkit.showInputBox",
        "title": "连接设备",
        "category": "VFM Toolkit",
        "icon": "$(plug)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "child_process": "^1.0.2"
  }
}
